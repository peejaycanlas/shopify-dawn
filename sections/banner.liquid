{{ 'section-banner.css' | asset_url | stylesheet_tag }}

<div id="banner-{{ section.id }}" class="banner">
  {% if section.settings.banner_title != blank %}
    <div class="banner__title">{{- section.settings.banner_title | escape -}}</div>
  {% endif %}
  {% if section.settings.banner_content != blank %}
    <div class="banner__content">{{ section.settings.banner_content }}</div>
  {% endif %}
  {% if section.settings.background_image != blank %}
    {{ 
      section.settings.background_image
      | image_url 
      | image_tag:
        class: 'banner__bg-image'
    }}
  {% endif %}
</div>

{% schema %}
  {
    "name": "Banner",
    "class": "banner-class",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "banner_title",
        "default": "Title",
        "label": "Banner Title"
      },
      {
        "type": "inline_richtext",
        "id": "banner_content",
        "default": "Lorem ipsum sit dolor amet",
        "label": "Banner Content"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      }
    ],
    "presets": [
      {
        "name": "Banner Preset Name",
        "category": "custom"
      }
    ]
  }
{% endschema %}